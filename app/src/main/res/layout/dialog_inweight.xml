<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/actor"
        android:text="Weight (Kg)"
        android:textColor="#D8771D39"
        android:textSize="14sp" />

    <EditText
        android:layout_width="232dp"
        android:layout_height="52dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:id="@+id/inweight1"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:cursorVisible="true"
        android:focusable="true"
        android:background="@drawable/textbox_design2"
        android:fontFamily="@font/delius"
        android:hint="While entering into Gym"
        android:inputType="number"
        android:maxLength="3"
        android:padding="8dp"
        android:textColor="@color/colorCursor"
        android:textCursorDrawable="@color/colorCursor"
        android:textSize="16sp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/submitweight1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_back"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="#ffffff" />
    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/red_buttonback"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>